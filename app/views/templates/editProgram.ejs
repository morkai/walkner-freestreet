<form id=editProgramForm class="form" method="post" action="/programs/<%= id %>">
  <fieldset id=editProgramFormGeneralInfo>
    <legend>Podstawowe informacje</legend>
    <ul class="form-fields">
      <li>
        <label for=editProgramFormName>Nazwa:</label>
        <input id=editProgramFormName name="name" type="text" value="<%= name %>">
    </ul>
  </fieldset>
  <div id=programEditor>
    <fieldset id=programOperationsPanel>
      <legend>Operacje</legend>
      <ul class="operations"></ul>
    </fieldset>
    <fieldset id=programSourcePanel>
      <legend>Program</legend>
      <ol class="source"></ol>
    </fieldset>
  </div>
</form>
<div id="repeatHelper" class="op helper" data-type="repeat">
  Powtarzaj <input name="count" type="number" value="" min="1" max="65535" step="1"> razy
  lub przez <input name="time" type="number" value="" min="0.1" max="65535" step="0.1"> sekund:
</div>
<div id="waitHelper" class="op helper" data-type="wait">
  Czekaj przez <input name="time" type="number" value="1" min="0.1" max="65535" step="0.1"> sekund
</div>
<div id="beepHelper" class="op helper" data-type="beep">
  Brzęcz przez <input name="time" type="number" value="1" min="0.1" max="65535" step="0.1"> sekund
</div>
<div id="shutdownHelper" class="op helper" data-type="shutdown">
  Wyłącz na <input name="time" type="number" value="1" min="0.1" max="65535" step="0.1"> sekund
</div>
<div id="pwmHelper" class="op helper" data-type="pwm">
  Zmień natężenie na <input name="value" type="number" value="0" min="0" max="100" step="1"> 
  w czasie <input name="time" type="number" value="0" min="0.1" max="65535" step="0.1"> sekund
</div>
